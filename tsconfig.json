{
  "compilerOptions": {
    "target": "es2020",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "module": "node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "sourceMap": false,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "src"
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", ".turbo", "dist", "tests", "examples"]
}
