{
  "name": "rdx.js",
  "author": "Zacary.dev",
  "description": "Root Development Experience - Elegant framework for Root applications",
  "version": "1.1.5",
  "license": "MIT",
  "keywords": [
    "root",
    "root-sdk",
    "rdx",
    "radix",
    "framework",
    "bot",
    "command-handler",
    "event-handler",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Velozity/rdx.js.git"
  },
  "bugs": {
    "url": "https://github.com/Velozity/rdx.js/issues"
  },
  "homepage": "https://github.com/Velozity/rdx.js#readme",
  "engines": {
    "node": ">=22"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@rootsdk/server-app": "*",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.18.6",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.17.0",
    "jiti": "^2.6.1",
    "prettier": "^3.4.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.18.2",
    "vitest": "^2.1.8"
  },
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepublishOnly": "npm run lint && npm test && npm run build",
    "prepack": "npm run build"
  }
}
